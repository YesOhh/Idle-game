/* pages/battle/battle.wxss */

.battle-container {
  min-height: 100vh;
  background: linear-gradient(180deg, var(--bg-darkest) 0%, var(--bg-dark) 100%);
  padding: 20rpx;
  padding-bottom: 120rpx;
}

/* Boss区域 - 现代渐变卡片（紧凑版） */
.boss-section {
  margin-bottom: 12rpx;
  background: linear-gradient(135deg, #1a1a35 0%, #2d1f3d 50%, #1a2535 100%);
  border: 1rpx solid rgba(168, 85, 247, 0.3);
  border-radius: 16rpx;
  padding: 12rpx 16rpx;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.4), inset 0 1rpx 0 rgba(255, 255, 255, 0.05);
}

.boss-level {
  text-align: center;
  font-size: 24rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 6rpx;
  text-shadow: 0 0 20rpx rgba(168, 85, 247, 0.5);
}

.prestige-badge {
  color: #feca57;
  font-size: 18rpx;
  margin-left: 10rpx;
}

.boss-sprite {
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  margin-bottom: 8rpx;
}

.boss-icon {
  font-size: 80rpx;
  cursor: pointer;
  user-select: none;
  transition: transform 0.1s;
  filter: drop-shadow(0 0 12rpx rgba(255, 107, 107, 0.5));
  -webkit-tap-highlight-color: transparent;
}

.boss-icon:active {
  transform: scale(0.95);
}

.boss-icon.shake {
  animation: shake 0.3s;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-10rpx); }
  75% { transform: translateX(10rpx); }
}

/* 伤害数字动画 */
.damage-number {
  position: absolute;
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 2rpx 2rpx 0 #000, -2rpx -2rpx 0 #000, 2rpx -2rpx 0 #000, -2rpx 2rpx 0 #000;
  pointer-events: none;
  animation: floatUp 1s ease-out forwards;
  z-index: 100;
}

.damage-number.crit {
  color: #f1c40f; /* 暴击金色 */
  font-size: 50rpx; /* 更大 */
  text-shadow: 2rpx 2rpx 0 #c0392b; /* 红色描边 */
  z-index: 110;
}

.damage-number.skill {
  color: #3498db; /* 技能蓝色 */
  font-size: 40rpx;
  text-shadow: 2rpx 2rpx 0 #2c3e50;
  z-index: 105;
}

.damage-number.skill-crit {
  color: #e67e22; /* 暴击橙色 */
  font-size: 52rpx;
  text-shadow: 2rpx 2rpx 0 #d35400;
  z-index: 115;
}

.damage-number.skill-mage {
  color: #9b59b6; /* 奥术紫色 */
  font-size: 44rpx;
  text-shadow: 2rpx 2rpx 0 #8e44ad;
  z-index: 120;
}

.damage-number.skill-dragon {
  color: #e74c3c; /* 毁灭红色 */
  font-size: 58rpx;
  text-shadow: 2rpx 2rpx 0 #c0392b;
  z-index: 130;
}

/* 全局Buff视觉效果 */
.battle-container.buff-speed {
  box-shadow: inset 0 0 100rpx rgba(168, 85, 247, 0.4);
  animation: pulse-purple 1.5s infinite alternate;
}

.battle-container.buff-damage {
  box-shadow: inset 0 0 120rpx rgba(255, 107, 107, 0.4);
  animation: pulse-red 1s infinite alternate;
}

@keyframes pulse-purple {
  from { box-shadow: inset 0 0 60rpx rgba(168, 85, 247, 0.3); }
  to { box-shadow: inset 0 0 120rpx rgba(168, 85, 247, 0.6); }
}

@keyframes pulse-red {
  from { box-shadow: inset 0 0 80rpx rgba(255, 107, 107, 0.3); }
  to { box-shadow: inset 0 0 160rpx rgba(255, 107, 107, 0.7); }
}

@keyframes floatUp {
  0% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
  50% {
    transform: translateY(-80rpx) scale(1.2);
  }
  100% {
    opacity: 0;
    transform: translateY(-150rpx) scale(0.8);
  }
}

