.bonus-summary-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 10rpx;
  background: rgba(255,255,255,0.05);
  padding: 20rpx;
  border: 2rpx solid var(--border-color);
  margin-bottom: 20rpx;
}

.summary-item {
  font-size: 22rpx;
  color: var(--text-secondary);
}

.relic-list-scroll {
  max-height: 400rpx;
}

.relic-item-mini {
  display: flex;
  align-items: center;
  padding: 15rpx;
  border-bottom: 1rpx solid rgba(255,255,255,0.1);
}

.relic-icon-mini {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.relic-info-mini {
  flex: 1;
}

.relic-name-mini {
  font-size: 24rpx;
  color: var(--text-primary);
  font-weight: bold;
}

.relic-desc-mini {
  font-size: 20rpx;
  color: var(--success-color);
}

.empty-relics {
  text-align: center;
  color: var(--text-muted);
  padding: 40rpx;
  font-size: 24rpx;
}
/* 自动化测试区域样式 */
.test-section {
  padding: 20rpx;
  background-color: rgba(46, 204, 113, 0.05);
  border: 4rpx solid #2ecc71;
  border-radius: 8rpx;
  margin: 40rpx 20rpx;
  box-shadow: 4rpx 4rpx 0 rgba(46, 204, 113, 0.2);
}

.test-title {
  font-size: 24rpx;
  font-weight: bold;
  color: #2ecc71;
  margin-bottom: 20rpx;
  text-align: center;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.test-row {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.test-picker {
  flex: 1;
  background-color: var(--bg-dark);
  border: 2rpx solid #2ecc71;
  padding: 15rpx 20rpx;
  color: var(--text-primary);
  font-size: 24rpx;
  text-align: center;
}

.picker-val {
  color: #2ecc71;
  font-weight: bold;
}

.test-switch-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 20rpx;
  background: rgba(0,0,0,0.2);
  border-radius: 6rpx;
}

.test-switch-label {
  font-size: 24rpx;
  color: var(--text-primary);
}
/* 战况统计表格样式 */
.stats-table {
  width: 100%;
}

.stats-header {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
  border-bottom: 2rpx solid var(--border-color);
  font-weight: bold;
  color: var(--text-secondary);
  font-size: 24rpx;
}

.stats-row {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 0;
  border-bottom: 1rpx dashed rgba(255,255,255,0.1);
  font-size: 24rpx;
}

.col-lvl {
  flex: 2;
  text-align: left;
}

.col-time {
  flex: 1;
  text-align: right;
  color: var(--success-color);
}

.total-stats {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background: rgba(0,0,0,0.3);
  margin-bottom: 20rpx;
  border: 2rpx solid var(--border-color);
  font-weight: bold;
}

.total-val {
  color: var(--primary-color);
}

.empty-stats {
  text-align: center;
  color: var(--text-muted);
  padding: 40rpx;
  font-size: 24rpx;
}

/* ========== Tab内容区域 ========== */
.tab-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 0;
}

/* ========== 佣兵管理Tab ========== */
.manage-scroll {
  height: calc(100vh - 550rpx);
}

.merc-row-wrapper {
  margin-bottom: 20rpx;
}

.merc-grid-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.merc-grid-item {
  flex: 1;
  min-width: 0;
  background: var(--bg-card);
  border-radius: 16rpx;
  padding: 20rpx 10rpx;
  text-align: center;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.merc-grid-item.recruited {
  border-color: var(--success-color);
  background: linear-gradient(135deg, rgba(34, 197, 94, 0.1) 0%, var(--bg-card) 100%);
}

.merc-grid-item.not-recruited {
  border-color: var(--border-color);
  opacity: 0.7;
}

.merc-grid-item.selected {
  border-color: var(--accent-color);
  background: linear-gradient(135deg, rgba(168, 85, 247, 0.2) 0%, var(--bg-card) 100%);
  box-shadow: 0 0 20rpx rgba(168, 85, 247, 0.3);
}

.merc-grid-icon {
  font-size: 60rpx;
  margin-bottom: 10rpx;
}

.merc-grid-name {
  font-size: 24rpx;
  color: var(--text-primary);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 佣兵详情面板 */
.merc-detail-panel {
  background: var(--bg-card);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-top: 10rpx;
  border: 2rpx solid var(--accent-color);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.3);
}

.detail-header {
  margin-bottom: 16rpx;
}

.detail-name {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-primary);
}

.detail-desc {
  font-size: 24rpx;
  color: var(--text-muted);
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.detail-stats {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  margin-bottom: 16rpx;
  padding: 16rpx;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 12rpx;
}

.detail-stat {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
}

.detail-label {
  color: var(--text-muted);
}

.detail-value {
  color: var(--success-color);
  font-weight: bold;
}

.detail-skill {
  padding: 16rpx;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.detail-skill .skill-detail-header {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 10rpx;
}

.detail-skill .skill-name {
  font-size: 26rpx;
  font-weight: bold;
}

.detail-skill .skill-name.unlocked {
  color: var(--accent-color);
}

.detail-skill .skill-name.locked {
  color: var(--text-muted);
}

.detail-skill .skill-unlock-condition {
  font-size: 22rpx;
  color: var(--warning-color);
}

.detail-skill .skill-detail-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.4;
}

.detail-cost {
  font-size: 26rpx;
  color: var(--text-muted);
  margin-bottom: 16rpx;
}

.detail-cost .cost-row {
  color: var(--warning-color);
  font-weight: bold;
  margin-top: 6rpx;
}

.detail-actions {
  display: flex;
  justify-content: center;
}

.action-btn {
  padding: 16rpx 60rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
}

.action-btn.recruit-btn {
  background: linear-gradient(135deg, var(--success-color) 0%, #16a34a 100%);
  color: #fff;
}

.action-btn.recruit-btn.disabled {
  background: var(--text-muted);
  opacity: 0.5;
}

.action-btn.hired-btn {
  background: var(--bg-dark);
  color: var(--text-muted);
  border: 2rpx solid var(--border-color);
}

.empty-state {
  text-align: center;
  color: var(--text-muted);
  padding: 60rpx;
  font-size: 28rpx;
}
