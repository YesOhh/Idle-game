/* 全局样式 - 现代深色主题 */

/* CSS变量定义 */
page {
  /* 主题色 */
  --primary-color: #ff6b6b;
  --secondary-color: #00d9ff;
  --success-color: #00ff88;
  --warning-color: #feca57;
  --danger-color: #ff6b6b;
  --accent-color: #a855f7;

  /* 背景色 - 保持与app.json一致 */
  --bg-darkest: #0a0a12;
  --bg-dark: #1a1a2e;
  --bg-medium: #16213e;
  --bg-light: #2c3e50;
  --bg-card: #1e1e35;

  /* 文字色 */
  --text-primary: #ffffff;
  --text-secondary: #a0a0b0;
  --text-muted: #606070;
  --text-gold: #ffd700;

  /* 边框和阴影 */
  --border-color: #3a3a5c;
  --border-glow: rgba(0, 217, 255, 0.3);
  --shadow-color: rgba(0, 0, 0, 0.5);
  --glow-primary: rgba(255, 107, 107, 0.4);
  --glow-secondary: rgba(0, 217, 255, 0.4);

  /* 像素字体 */
  font-family: 'Courier New', Courier, monospace;
  background-color: var(--bg-dark);
  color: var(--text-primary);
  font-size: 28rpx;
}

/* 重置样式 */
view, text, button, image, scroll-view {
  box-sizing: border-box;
}


/* 像素风格按钮 */
.pixel-button {
  background: linear-gradient(135deg, var(--primary-color), #ff8f8f);
  color: var(--text-primary);
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  cursor: pointer;
  position: relative;
  box-shadow: 0 4rpx 15rpx var(--glow-primary);
  transition: all 0.2s;
}

.pixel-button:active {
  box-shadow: 0 2rpx 8rpx var(--glow-primary);
  transform: translateY(2rpx);
}

.pixel-button.disabled {
  background: var(--bg-light);
  cursor: not-allowed;
  opacity: 0.6;
  box-shadow: none;
}

/* 现代卡片 */
.pixel-card {
  background: var(--bg-card);
  border: 1rpx solid var(--border-color);
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx 0;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

/* 进度条 */
/* ❗注意: 不要在 .pixel-progress 上同时使用 border-radius 和 overflow:hidden
 * 微信小程序存在渲染bug，这个组合会在点击事件触发重绘时产生白边/白线
 * 发现日期: 2026-01-26
 */
.pixel-progress {
  width: 100%;
  height: 24rpx;
  background-color: var(--bg-light);
  border: none;
  /* border-radius: 12rpx; -- 移除，会导致白线问题 */
  position: relative;
  overflow: hidden;
}

.pixel-progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #ff6b6b, #ff8f8f);
  border-radius: 12rpx;
  transition: width 0.3s ease;
  position: relative;
  box-shadow: 0 0 10rpx var(--glow-primary);
}



/* 文本样式 */
.text-large {
  font-size: 36rpx;
  font-weight: bold;
}

.text-medium {
  font-size: 28rpx;
}

.text-small {
  font-size: 24rpx;
}

.text-primary {
  color: var(--primary-color);
}

.text-success {
  color: var(--success-color);
}

.text-warning {
  color: var(--warning-color);
}

.text-muted {
  color: var(--text-muted);
}

/* 布局工具类 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  justify-content: center;
  align-items: center;
}

.flex-between {
  justify-content: space-between;
  align-items: center;
}

.flex-1 {
  flex: 1;
}

/* 间距工具类 */
.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mt-30 { margin-top: 30rpx; }
.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }
.p-20 { padding: 20rpx; }
.p-30 { padding: 30rpx; }

/* 像素风格分割线 */
.pixel-divider {
  height: 4rpx;
  background-color: var(--border-color);
  margin: 20rpx 0;
  background-image: repeating-linear-gradient(
    90deg,
    var(--border-color),
    var(--border-color) 8rpx,
    transparent 8rpx,
    transparent 16rpx
  );
}
